<form class="adminform" action="/studentAchievement" method="post">
    <div class="container-fluid h-100 bg-light text-dark">
        <br>
        <div class="row justify-content-left align-items-center h-100">
            <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
                <div class="form-group">
                  <label for="departement" class="form-label">Choose the departments<span style="font-style:italic; font-size:10px;color:gray;"><br/>(Multiple selection available)</span> </label>
                    <select class="mul-select" multiple="true" name="department">
                      <option value="all">All</option>
                        <option value="CE">CE</option>
                        <option value="ME">ME</option>
                        <option value="EE">EE</option>
                        <option value="EC">EC</option>
                        <option value="IM">IM</option>
                        <option value="CS">CS</option>
                        <option value="TE">TE</option>
                        <option value="IS">IS</option>
                        <option value="EI">EI</option>
                        <option value="ML">ML</option>
                        <option value="BT">BT</option>
                        <option value="CH">CH</option>
                        <option value="AS">AS</option>
                        <option value="AM">AM</option>
                        <option value="clear" class="clearAll">Clear all selection</option>
                    </select>
                </div> 
              </div>

              <div class="col-12 col-sm-1 mt-3">
                <label for="from_year" class="form-label">From</label>
                <select name="from_year" class="form-select" id="from_year" required>
                    <% let year = new Date().getFullYear();
                    for(var i = 2012; i < year; ++i) { %>
                        <option 
                        value="<%=i%>"><%=i%></option>
                    <% }%>
                </select>
             </div>

             <div class="col-12 col-sm-1 mt-3">
                <label for="to_year" class="form-label">To</label>
                <select name="to_year" class="form-select" id="to_year" required>
              </select>
           </div>
           <div class="col-3">
            <button class="submitBtn btn mt-5" type="submit" value="Submit">View Student Achievement</button>
          </div>
        </div>    
    </div>
</form>
<script>
    function clear(){
        $('.clearAll').on('click', function() {
        $(".mul-select option:selected").prop("selected", false);
});
    }
  
</script>